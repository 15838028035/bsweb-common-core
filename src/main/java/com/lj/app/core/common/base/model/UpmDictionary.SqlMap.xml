<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" 
    "http://ibatis.apache.org/dtd/sql-map-2.dtd">

<sqlMap namespace="upmDictionary">

    <typeAlias alias="upmDictionary" type="com.lj.app.core.common.base.model.UpmDictionary"/>

    <resultMap id="upmDictionaryResult" class="upmDictionary">
   	  	<result property="typeCode" column="typeCode"/>
   	  	<result property="dataCode" column="dataCode"/>
   	  	<result property="dataDesc" column="dataDesc"/>
   	  	<result property="sortNo" column="sortNo"/>
   	  	<result property="id" column="id"/>
   	  	<result property="nodeId" column="node_id"/>
    </resultMap>

	<sql id="dynamicWhere">
	    <dynamic prepend="WHERE">
	       <isNotEmpty prepend="AND" property="typeCode">
	             typeCode = #typeCode#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="dataCode">
	             dataCode = #dataCode#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="dataDesc">
	             dataDesc = #dataDesc#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="sortNo">
	             sortNo = #sortNo#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="id">
	             id = #id#
	       </isNotEmpty>
	       <isNotEmpty prepend="AND" property="nodeId">
	             node_id = #nodeId#
	       </isNotEmpty>
	    </dynamic>	
	</sql>

	<sql id="commonSelectColumnsPrefix">
	    <![CDATA[
	    select
        	typeCode ,
        	dataCode ,
        	dataDesc ,
        	sortNo ,
        	id,
        	node_id
	    ]]>
	</sql>
	
    <insert id="insert" parameterClass="upmDictionary">
        <selectKey resultClass="int" keyProperty="id"  type="post">
             SELECT LAST_INSERT_ID()
        </selectKey>

	    <![CDATA[
	        INSERT INTO
	        upm_dictionary (
	        	typeCode ,
	        	dataCode ,
	        	dataDesc ,
	        	sortNo ,
	        	id,
	        	node_id
	        ) VALUES (
				#typeCode# ,
				#dataCode# ,
				#dataDesc# ,
				#sortNo# ,
				#id# ,
				#nodeId#
	        )
	    ]]>
    </insert>

    <update id="update" parameterClass="upmDictionary">
    <![CDATA[
        UPDATE upm_dictionary SET
			typeCode = #typeCode# ,
			dataCode = #dataCode# ,
			dataDesc = #dataDesc# ,
			sortNo = #sortNo# ,
			id = #id#,
			node_Id = #nodeId# 
			
        WHERE 
	        id = #id# 
    ]]>
    </update>

    <delete id="delete" parameterClass="java.lang.Integer">
    <![CDATA[
        delete from upm_dictionary where
        id = #id# 
    ]]>
    </delete>
    
    <select id="select" resultMap="upmDictionaryResult">
    	<include refid="commonSelectColumnsPrefix"/>
	    <![CDATA[
	        from upm_dictionary 
	    ]]>
		<include refid="dynamicWhere"/>
		order by sortNo asc
    </select>
    
    <select id="getInfoByKey" resultMap="upmDictionaryResult">
	    <include refid="commonSelectColumnsPrefix"/>
	    <![CDATA[
	        from upm_dictionary 
	        where 
		        id = #id# 
	    ]]>
    </select>

 	<select id="pagenate" resultMap="upmDictionaryResult">
    	<include refid="commonSelectColumnsPrefix"/>
	    <![CDATA[
	        from upm_dictionary 
	    ]]>
		<include refid="dynamicWhere"/>
		<dynamic prepend="ORDER BY">
			<isNotEmpty property="sortColumns">$sortColumns$</isNotEmpty>
		</dynamic>
    </select>
    
    <select id="pagenate_count" resultClass="long">
    <![CDATA[
        select 
        count(*)
        from upm_dictionary
    ]]>
		<include refid="dynamicWhere"/>    
    </select>

</sqlMap>
